# 腾讯云 API 凭证
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key

# 腾讯云区域
TENCENT_REGION=ap-guangzhou

# 安全组 ID
SECURITY_GROUP_ID=sg-xxxxxxxx

# 放行端口 (ALL 表示所有端口，或指定具体端口如 22,80,443)
TARGET_PORT=ALL

# 访问密钥 (建议使用 32+ 字符的强随机字符串)
# 生成命令: openssl rand -hex 32
ACCESS_TOKEN=your_strong_random_access_token_here

# 启用请求签名验证 (默认启用，推荐保持)
# true:  启用签名验证 (高安全，防重放攻击，TOKEN 泄露仅 5 分钟有效) - 默认
# false: 仅验证 TOKEN (简单，适合内网或受控环境) - 不推荐
ENABLE_SIGNATURE=true

# 启用 IP 黑名单 (默认启用，推荐保持)
# true:  5 分钟内认证失败 5 次自动封禁 1 小时 - 默认
# false: 不启用 IP 封禁
ENABLE_IP_BLACKLIST=true

# 启用 nonce 防重放 (默认启用，推荐保持)
# true:  要求客户端提供一次性随机数，防止签名重放攻击 - 默认
# false: 仅依赖时间戳防重放（5 分钟窗口）
ENABLE_NONCE=true

# IP 黑名单配置 (仅在 ENABLE_IP_BLACKLIST=true 时生效)
MAX_AUTH_FAILURES=5      # 最大失败次数
BLACKLIST_DURATION=3600  # 封禁时长（秒）

# nonce 缓存大小 (仅在 ENABLE_NONCE=true 时生效)
NONCE_CACHE_SIZE=1000    # 最多缓存的 nonce 数量
