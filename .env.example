# 腾讯云 API 凭证
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key

# 腾讯云区域
TENCENT_REGION=ap-guangzhou

# 安全组 ID
SECURITY_GROUP_ID=sg-xxxxxxxx

# 放行端口 (ALL 表示所有端口，或指定具体端口如 22,80,443)
TARGET_PORT=ALL

# 访问密钥 (建议使用 32+ 字符的强随机字符串)
# 生成命令: openssl rand -hex 32
ACCESS_TOKEN=your_strong_random_access_token_here

# 启用请求签名验证 (可选，提升安全性)
# true: 启用签名验证 | false: 仅验证 TOKEN
ENABLE_SIGNATURE=false
